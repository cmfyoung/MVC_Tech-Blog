<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <h3>{{{title}}}</h3>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date created_at}}</p>
</div>

{{#each comments}} 

<div class="text-center">
  <h3>{{title}}</h3>
  <p>{{content}}</p>
  <button id="{{id}}">Delete</button>
</div>

{{/each}}


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-title">Title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-content">Content:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<script src="/js/comment.js"></script>